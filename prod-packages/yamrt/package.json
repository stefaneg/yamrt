{
  "name": "yamrt",
  "version": "0.2.2",
  "description": "Yet Another MonoRepo Tool for build, test and publish in CI/CD environment.",
  "main": "index.js",
  "author": "Gu√∞laugur S. Egilsson",
  "license": "MIT",
  "repository": "https://github.com/stefaneg/yamrt",
  "scripts": {
    "test": "npm run specs && npm run itest",
    "specs": "mocha './src/**/*.spec.js'",
    "tdd": "mocha -w './src/**/*.spec.js'",
    "itdd": "mocha -w './src/**/*.integrated.js'",
    "itest": "mocha './src/**/*.integrated.js'",
    "prepublishOnly": "npm run ci",
    "ci": "npm run test"
  },
  "bin": {
    "yamrt": "src/cli.js"
  },
  "dependencies": {
    "bluebird": "3.5.4",
    "chalk": "2.4.2",
    "git-state": "4.1.0",
    "is-ci": "2.0.0",
    "lodash": "4.17.14",
    "meow": "5.0.0",
    "rc": "1.2.8",
    "registry-url": "5.1.0",
    "shell-exec": "1.0.2",
    "superagent": "5.0.5",
    "url": "0.11.0",
    "semver": "6.2.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "mocha": "6.1.4",
    "npm-package-info": "0.1.0"
  },
  "yamrtConfig": {
    "publish": true
  }
}
